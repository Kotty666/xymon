#!/bin/sh

CONFIGFILE=/etc/default/hobbit-client

set -e

. /usr/share/debconf/confmodule

if [ -e $CONFIGFILE ]; then
   . $CONFIGFILE || true
fi

[ -z "$HOBBITSERVERS" ] && HOBBITSERVERS="127.0.0.1"
[ -z "$CLIENTHOSTNAME" ] && CLIENTHOSTNAME="`hostname -f`"

[ "$HOBBITSERVERS" ] && db_set hobbit-client/HOBBITSERVERS "$HOBBITSERVERS"
[ "$CLIENTHOSTNAME" ] && db_set hobbit-client/CLIENTHOSTNAME "$CLIENTHOSTNAME"

db_input high hobbit-client/HOBBITSERVERS || true
db_input medium hobbit-client/CLIENTHOSTNAME || true
db_go || true

